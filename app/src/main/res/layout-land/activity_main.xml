<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:background="@color/colorTextIcons"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:columnCount="4"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">
        <Button
            android:id="@+id/btnSen"
            android:onClick="onClick"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBotonSeno"/>
        <Button
            android:id="@+id/btnCos"
            android:onClick="onClick"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBotonCoseno"/>
        <Button
            android:id="@+id/btnC"
            android:onClick="onClick"
            android:background="@color/colorDivider"
            android:textColor="@color/colorC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBotonC" />
        <Button
            android:id="@+id/btnEntre"
            android:onClick="onClick"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBotonEntre" />

        <Button
            android:id="@+id/btn7"
            android:onClick="onClick"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBoton7" />

        <Button
            android:id="@+id/btn8"
            android:onClick="onClick"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBoton8" />

        <Button
            android:id="@+id/btn9"
            android:onClick="onClick"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBoton9" />

        <Button
            android:id="@+id/btnPor"
            android:onClick="onClick"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBotonPor" />

        <Button
            android:id="@+id/btn4"
            android:onClick="onClick"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBoton4" />

        <Button
            android:id="@+id/btn5"
            android:onClick="onClick"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBoton5" />

        <Button
            android:id="@+id/btn6"
            android:onClick="onClick"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBoton6" />

        <Button
            android:id="@+id/btnMenos"
            android:onClick="onClick"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBotonMenos" />

        <Button
            android:id="@+id/btn1"
            android:onClick="onClick"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBoton1" />

        <Button
            android:id="@+id/btn2"
            android:onClick="onClick"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBoton2" />

        <Button
            android:id="@+id/btn3"
            android:onClick="onClick"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBoton3" />

        <Button
            android:id="@+id/btnMas"
            android:onClick="onClick"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainStringBotonMas" />

        <Button
            android:id="@+id/btn0"
            android:onClick="onClick"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="@string/mainStringBoton0" />

        <Button
            android:id="@+id/btnPunto"
            android:onClick="onClick"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="@string/mainStringBotonPunto" />

        <Button
            android:id="@+id/btnIgual"
            android:onClick="onClick"
            android:background="@color/colorPrimaryLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:text="@string/mainStringBotonIgual" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>